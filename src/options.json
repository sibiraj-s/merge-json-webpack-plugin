{
  "title": "MergeJsonPluginOptions",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "cwd": {
      "description": "The directory, an absolute path, for resolving files",
      "type": "string",
      "minLength": 1
    },
    "force": {
      "description": "Override file that already exist in compilatation",
      "type": "boolean"
    },
    "mergeFn": {
      "description": "A function used to merge two objects",
      "instanceof": "Function"
    },
    "minify": {
      "description": "Minify the output json",
      "type": "boolean"
    },
    "group": {
      "description": "Files to merge and destination path",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "files": {
            "oneOf": [
              {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              {
                "type": "string",
                "minLength": 1
              }
            ]
          },
          "beforeEmit": {
            "instanceOf": "Function"
          },
          "to": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "globOptions": {
      "description": "Options to forward to fast-glob",
      "type": "object"
    }
  },
  "required": [
    "group"
  ]
}
